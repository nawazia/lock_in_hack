# OpenAI API Key (required for embeddings and LLM)
OPENAI_API_KEY=sk-your-openai-key-here

# Valyu API Key (required for news search)
VALYU_API_KEY=your-valyu-api-key-here

# Optional: AWS Bedrock credentials (uncomment to use)
TEAM_ID=your-team-id
API_TOKEN=your-api-token
API_ENDPOINT=https://ctwa92wg1b.execute-api.us-east-1.amazonaws.com/prod/invoke

# LLM Provider (openai, openrouter, or bedrock)
LLM_PROVIDER=openai

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# LangSmith Configuration (for tracing and monitoring)
# Sign up at https://smith.langchain.com to get your API key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=lock-in-hack-multi-agent
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Flask API Configuration
FLASK_PORT=8000
FLASK_DEBUG=false

# OpenRouter API Key (for chat assistant in graph-ui)
# Sign up at https://openrouter.ai to get your API key
OPENROUTER_API_KEY=your_openrouter_api_key_here
